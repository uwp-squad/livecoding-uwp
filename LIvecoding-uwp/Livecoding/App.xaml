<Application
    x:Class="Livecoding.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Livecoding.UWP"
    xmlns:inf="using:Livecoding.UWP.Infrastructure"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <!-- ViewModelLocator -->
            <inf:ViewModelLocator x:Key="Locator" />

            <!-- Adaptative properties -->
            <x:Double x:Key="SmallScreenWidth">0</x:Double>
            <x:Double x:Key="MediumScreenWidth">700</x:Double>
            <x:Double x:Key="LargeScreenWidth">1500</x:Double>
            
            <!-- Colors -->
            <SolidColorBrush x:Key="PrimaryBlack" Color="#161a1e" />
            <SolidColorBrush x:Key="SecondaryBlack" Color="#22282e" />
            <SolidColorBrush x:Key="PrimaryWhite" Color="#f1f1f1" />
            <SolidColorBrush x:Key="PrimaryBlue" Color="#76b6e1" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
